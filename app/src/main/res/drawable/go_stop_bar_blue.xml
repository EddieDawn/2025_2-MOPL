<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Semi-transparent Korean-style blue -->
    <solid android:color="#AA0A6CFF"/> <!-- 66% opacity blue -->

    <!-- Rounded corners -->
    <corners android:radius="22dp"/>

    <!-- Soft outline -->
    <stroke
        android:width="2dp"
        android:color="#CCFFFFFF"/> <!-- subtle white edge -->

    <!-- Inner padding -->
    <padding
        android:left="14dp"
        android:right="14dp"
        android:top="10dp"
        android:bottom="10dp"/>
</shape>

