<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:gravity="center_horizontal">

    <!-- Turn indicator -->
    <TextView
        android:id="@+id/turnIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Turn"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/captureCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Captured: 0 / 0"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />


    <!-- Big image area showing selected/played card -->
    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/selected_card"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/opponentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opponent: (loading...)"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/opponentImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"/>


    <!-- //Field RecyclerView (cards on the table) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fieldRecycler"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="8dp"
        android:layout_marginBottom="20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Player hand RecyclerView (bottom row) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cardRecycler"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="8dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>
