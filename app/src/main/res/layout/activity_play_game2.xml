<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB3BA"
    tools:context=".PlayGame2Activity">

    <!-- Top Player Button (Rotated 180 degrees) -->
    <Button
        android:id="@+id/btnTopPlayer"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:text="DRAW!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:rotation="180"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Center Text (Initially Hidden) -->
    <TextView
        android:id="@+id/tvCenterDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DRAW!"
        android:textSize="64sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Ready Countdown Text (Initially Visible) -->
    <TextView
        android:id="@+id/tvReadyCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="READY\n5"
        android:textSize="72sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bottom Player Button -->
    <Button
        android:id="@+id/btnBottomPlayer"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginBottom="50dp"
        android:text="DRAW!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
